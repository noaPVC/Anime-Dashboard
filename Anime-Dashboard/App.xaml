<Application x:Class="Anime_Dashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Anime_Dashboard"
             StartupUri="./Window/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Themes -->
                <ResourceDictionary Source="Resources/Themes/Dark.xaml" />
                <ResourceDictionary Source="Resources/Fonts/Fonts.xaml" />

                <!-- Animations (XamlFlair, custom, material etc.) -->
                <ResourceDictionary Source="Resources/AnimationsXamlFlair.xaml" />
                
                <!-- Resource Control Styles -->
                <ResourceDictionary Source="Controls/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
